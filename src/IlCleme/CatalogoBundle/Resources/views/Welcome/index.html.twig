{% extends '::layout.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block menu %}
    <li class="active">
        <a href="/"><i class="fa fa-th-large"></i> <span class="nav-label">Catalogo</span> <span class="fa arrow"></span></a>
        <ul class="nav nav-second-level collapse in">
            <li class="active"><a href="{{ path('welcome') }}">Dashboard</a></li>
            <li>
                <a href="{{ path('products') }}">Prodotti <span class="fa arrow"></span></a>
                <ul class="nav nav-third-level collapse">
                    {% for category in categories %}
                        <li><a href="{{ path('show_category', {id : category.id}) }}">{{ category.title }}</a></li>
                    {% endfor %}
                </ul>
            </li>
            <li><a href="{{ path('categories') }}">Categorie</a></li>
            <li><a href="{{ path('features') }}">Caratteristiche</a></li>
        </ul>
    </li>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-3">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    {#<span class="label label-primary pull-right">Today</span>#}
                    <h5>Prodotti</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">{{ products }}</h1>
                    {#<div class="stat-percent font-bold text-navy">44% <i class="fa fa-level-up"></i></div>#}
                    <small>Prodotti presenti</small>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    {#<span class="label label-primary pull-right">Today</span>#}
                    <h5>Categorie</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">{{ categories }}</h1>
                    {#<div class="stat-percent font-bold text-navy">44% <i class="fa fa-level-up"></i></div>#}
                    <small>Categorie presenti</small>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    {#<span class="label label-primary pull-right">Today</span>#}
                    <h5>Feature</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">{{ features }}</h1>
                    {#<div class="stat-percent font-bold text-navy">44% <i class="fa fa-level-up"></i></div>#}
                    <small>Feature presenti</small>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    {#<span class="label label-primary pull-right">Today</span>#}
                    <h5>Featurevalues</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">{{ featurevalues }}</h1>
                    {#<div class="stat-percent font-bold text-navy">44% <i class="fa fa-level-up"></i></div>#}
                    <small>Featurevalues presenti</small>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
