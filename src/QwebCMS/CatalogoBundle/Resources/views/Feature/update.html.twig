{# src/Acme/DemoBundle/Resources/views/Random/index.html.twig #}
{% extends 'layout.html.twig' %}
{% block stylesheets %}{% endblock %}

{% block title %}Modifica {{ feature.title }}{% endblock %}

{% block pagetitle %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-sm-4">
            <h2>Modifica Feature "{{ feature.title }}"</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="/">Dashboard</a>
                </li>
                <li>
                    <a href="/features">Features</a>
                </li>
                <li class="active">
                    <strong>Modifica Feature</strong>
                </li>
            </ol>
        </div>
    </div>
{% endblock %}

{% block content %}
<div class="row">

    <div class="col-lg-12">
        {{ form_start(form) }}
        <div class="tabs-container">
            <ul class="nav nav-tabs">
                <li class="active"><a data-toggle="tab" href="#tab-1"> Informazioni Feature</a></li>
            </ul>
            <div class="tab-content">

                <div id="tab-1" class="tab-pane active">
                    <div class="panel-body">

                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.title, 'Nome categoria Caratteristiche'|default(null) ,{'label_attr': {'class': 'control-label'}}) }}
                                {{ form_errors(form.title) }}
                                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.description, 'Breve descrizione'|default(null) ,{'label_attr': {'class': 'control-label'}}) }}
                                {{ form_errors(form.description) }}
                                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.typeInput, 'Tipo di input'|default(null) ,{'label_attr': {'class': 'control-label'}}) }}
                                {{ form_errors(form.typeInput) }}
                                {{ form_widget(form.typeInput, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.compulsory, 'Selezione Obbligatoria'|default(null) ,{'label_attr': {'class': 'control-label'}}) }}
                                {{ form_errors(form.compulsory) }}
                                {{ form_widget(form.compulsory, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.display, 'Visualizzazione'|default(null) ,{'label_attr': {'class': 'control-label'}}) }}
                                {{ form_errors(form.display) }}
                                {{ form_widget(form.display, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="col-md-12">
                            {{ form_label(form.save, label|default(null) ,{'label_attr': {'class': 'control-label col-sm-12'}}) }}
                            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}

{% endblock %}