<div class="col-md-6 ">
    <form method="get" action="{{ action }}" enctype="application/x-www-form-urlencoded" class="pull-left">

        <select name="{{ filterFieldName }}">
            {% for field, label in fields %}
                <option value="{{ field }}"{% if selectedField == field %} selected="selected"{% endif %}>{{ label }}</option>
            {% endfor %}
        </select>

        <input type="text" value="{{ selectedValue }}" name="{{ filterValueName }}" />

        <button>{{ options.button }}</button>

    </form>
</div>

<div class="col-md-6">
    <form method="get" action="{{ action }}" enctype="application/x-www-form-urlencoded" class="pull-right">

        <select name="number">
            <option>10</option>
            <option>20</option>
            <option>50</option>
        </select>

        <button>{{ options.button }}</button>

    </form>
</div>



