{% extends '::layout.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-3">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    {#<span class="label label-primary pull-right">Today</span>#}
                    <h5>Prodotti</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">{{ products|length }}</h1>
                    {#<div class="stat-percent font-bold text-navy">44% <i class="fa fa-level-up"></i></div>#}
                    <small>Prodotti presenti</small>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    {#<span class="label label-primary pull-right">Today</span>#}
                    <h5>Categorie</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">{{ categories|length }}</h1>
                    {#<div class="stat-percent font-bold text-navy">44% <i class="fa fa-level-up"></i></div>#}
                    <small>Categorie presenti</small>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    {#<span class="label label-primary pull-right">Today</span>#}
                    <h5>Feature</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">{{ features|length }}</h1>
                    {#<div class="stat-percent font-bold text-navy">44% <i class="fa fa-level-up"></i></div>#}
                    <small>Feature presenti</small>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    {#<span class="label label-primary pull-right">Today</span>#}
                    <h5>Featurevalues</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">{{ featurevalues|length }}</h1>
                    {#<div class="stat-percent font-bold text-navy">44% <i class="fa fa-level-up"></i></div>#}
                    <small>Featurevalues presenti</small>
                </div>
            </div>
        </div>
    </div>

    {# Includo elenco categorie #}
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>Categorie</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <i class="fa fa-wrench"></i>
                </a>
                <!--<a class="close-link">
                    <i class="fa fa-times"></i>
                </a>-->
            </div>
        </div>
        <div class="ibox-content">
            <div class="table-responsive">
                <table class="table table-striped" >
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Nome Categoria</th>
                        <th>Descrizione</th>
                        <th>Azioni</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for category in categories %}
                        <tr>
                            <td>
                                {{category.idTblCatalogueCategory}}
                            </td>
                            <td>
                                {{category.title}}
                            </td>
                            <td>
                                {{category.description}}
                            </td>
                            <td>
                                <a href="/category/update/{{category.idTblCatalogueCategory}}" title="Modifica"><i class="fa fa-edit"></i></a>
                                <a href="/category/delete/{{category.idTblCatalogueCategory}}" title="Elimina"><i class="fa fa-times"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {# Includo elenco prodotti #}
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>Prodotti</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <i class="fa fa-wrench"></i>
                </a>
                <!--<a class="close-link">
                    <i class="fa fa-times"></i>
                </a>-->
            </div>
        </div>
        <div class="ibox-content">
            <div class="table-responsive">
                <table class="table table-striped" >
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Nome Prodotto</th>
                        <th>Descrizione</th>
                        <th>Azioni</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for product in products %}
                        <tr>
                            <td>
                                {{product.idTblCatalogueProduct}}
                            </td>
                            <td>
                                {{product.title}}
                            </td>
                            <td>
                                {{product.shortDescription}}
                            </td>
                            <td>
                                <a href="/product/update/{{product.idTblCatalogueProduct}}" title="Modifica"><i class="fa fa-edit"></i></a>
                                <a href="/product/delete/{{product.idTblCatalogueProduct}}" title="Elimina"><i class="fa fa-times"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}
